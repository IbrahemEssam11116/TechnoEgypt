@model TechnoEgypt.ViewModel.Student
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container p-3 my-3 border">
    <h1> @ViewBag.PageName</h1>

    <div class="row">

        <hr />
        <form asp-action="AddOrEditStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParentId" />
            @if (@ViewBag.IsEdit)
            {
                <input type="hidden" asp-for="Id" />
                    if (!string.IsNullOrEmpty(@Model.ImageURL))
                    {
                        <img src="~/@Model.ImageURL" width="100">
                    }
                    //<input type="file" asp-for="Image" id="Image" name="Image"  />
            }
            <input type="file" asp-for="Image" id="Image" name="Image" />

            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="SchoolName" class="control-label"></label>
                    <input asp-for="SchoolName" class="form-control" />
                    <span asp-validation-for="SchoolName" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                @*<div class="form-group col-4">
                <label asp-for="FatherPhoneNumber" class="control-label"></label>
                <input asp-for="FatherPhoneNumber" class="form-control" />
                <span asp-validation-for="FatherPhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                <label asp-for="FatherEmail" class="control-label"></label>
                <input asp-for="FatherEmail" class="form-control" />
                <span asp-validation-for="FatherEmail" class="text-danger"></span>
                </div>*@

            </div>
            <div class="form-group" style="margin-top:10px;text-align:center;">
                <input class="btn btn-primary" type="submit" value="Save" />
                <a class="btn btn-danger" asp-action="StudentIndex">Back</a>
            </div>
        </form>
                        @if (@ViewBag.IsEdit)
                {
            <div onclick="OpenAddCourseModel()" class="btn btn-primary col-2" style="margin-top:10px;margin-bottom:10px;"> Add Course</div>
                
        @if (Model.ChildCourses.Count > 0)
        {
            <div class="table-responsive">
                <table class="table" id="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Date
                </th>
                <th>
                    Certificate
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChildCourses)
            {
                <tr>
                    <td>
                        @item.Course.Name
                    </td>
                     <td>
                        @item.Course.Name
                    </td>
                     <td>
                      <a asp-action="createCertificate" asp-controller="Staff" class="btn btn-outline-primary" asp-route-userc="@item.Id">Download</a>
                    </td>
                    <td>
                        @*<a asp-action="AddOrEditStudent" class="btn btn-outline-primary" asp-route-ParentID="@item.Id">Edit</a>*@
                        <a asp-action="DeleteChildCourse" class="btn btn-outline-danger" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
          </table>
            </div>
            }   }
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        <script>
        $(document).ready(function () {
            $('#table').DataTable({
                pagingType: 'full_numbers',
            });
        });
        function OpenAddCourseModel(){
            debugger;


            $.ajax({
            url: "/Student/AddStudentCourses?StudentId="+@Model.Id,
            type: "GET",
            //data: { StudentId:'@Model.Id'}
            success: function(response) {
                console.log(response)
                debugger;
                $("#modal-body").html(response)  ;
                $("#modal-title").html("Add Course") 
        $('#modal').modal('toggle');

                // Handle the JSON response here
            },
            error: function(xhr, status, error) {
                // Handle the error here
            }
        });


        }

        </script>
    }
