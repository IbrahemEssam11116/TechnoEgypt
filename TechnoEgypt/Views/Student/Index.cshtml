@model List<TechnoEgypt.ViewModel.Parents>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}@using Microsoft.AspNetCore.Identity;
@using TechnoEgypt.Areas.Identity.Data;
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<div class="row">
    <div class="col-5">
        <h2>Application List</h2>
    </div>
    @if (await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "ADMIN") || await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "ADD_PARENT"))
    {
    <div class="col-7">
        <p style="text-align:left;margin-right:20px;margin-top:5px">
            <a class="btn btn-outline-primary" asp-action="AddOrEdit">Create New</a>
        </p>
    </div>}
</div>
<div class="table-responsive">
    <table class="table" id="table">
        <thead>
            <tr>
                <th>StudenName</th>
                <th>FatherName</th>
                <th>Father No.</th>
                <th>Mother No.</th>
                <th>CV</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="AddOrEditStudent" asp-route-Id="@item.StudentId" asp-route-ParentID="@item.Id"> @item.Name </a>
                    </td>
                    <td>
                        <a asp-action="AddOrEdit" asp-route-Id="@item.Id"> @item.FatherTitle </a>
                    </td>
                    <td>
                        @item.FatherPhoneNumber
                    </td>
                    <td>
                        @item.MotherPhoneNumber
                    </td>
                    <td class="text-left">
                        <a asp-action="CreateCV" asp-controller="Staff" asp-route-userId="@item.StudentId" as class="btn btn-danger">Download cv</a>
                    </td>
                   

                    <td class="text-left">
                        @if (item.Name != null) { 
                        <a asp-action="AddOrEditStudent" class="btn btn-outline-primary" asp-route-Id="@item.StudentId">Edit</a>
                            <a asp-action="DeleteStudent" class="btn btn-outline-danger" asp-route-Id="@item.StudentId">Delete</a>
                        }
                        else
                        {
                            <a asp-action="AddOrEdit" class="btn btn-outline-primary" asp-route-Id="@item.Id">Edit</a>
                            <a asp-action="Delete" class="btn btn-outline-danger" asp-route-Id="@item.Id">Delete</a> 
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                pagingType: 'full_numbers',
            });
        });
    </script>
}