@model List<TechnoEgypt.ViewModel.Student>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Parent List</h1>

<p style="text-align:right;margin-right:20px;">
    <a class="btn btn-outline-primary" asp-action="AddOrEdit">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>UserName</th>
                <th>FatherName</th>
                <th>Parent Phone No.</th>
                <th>Kids No.</th>
                <th>Kids</th>
                <th>Edit Action</th>
                <th>Delete Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                      <a asp-action="StudentIndex" asp-route-Id="@item.Id"> @item.UserName </a>

                    </td>
                    <td>
                        @item.FatherTitle
                    </td>
                    <td>
                        @item.FatherPhoneNumber
                    </td>
                    <td>
                        @item.StudentCount
                    </td>
                    <td class="text-left">
                        <a asp-action="StudentIndex" class="btn btn-outline-primary" asp-route-Id="@item.Id">View</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="AddOrEdit" class="btn btn-outline-primary" asp-route-Id="@item.Id">Edit</a>
                    </td>

                    <td class="text-center">
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>